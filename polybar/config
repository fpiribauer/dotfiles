[global/wm]
margin-top = 5
margin-bottom = 5

[bar/bar1]
monitor = ${env:PRIMARY_DISPLAY:eDP1}
width = 100%
height = 25
offset-x = 0
offset-y = 5

bottom = true

background = #00000000
foreground = #555555

spacing = 1
padding-left = 4
padding-right = 4
module-margin-left = 1
module-margin-right = 2

font-0 = hack:pixelsize=12;1
font-1 = unifont:size=6:heavy:fontformat=truetype;-2
font-2 = siji:pixelsize=10;0
font-3 = FontAwesome:pixelsize=14;0

modules-left =
modules-center = i3
modules-right =

tray-position = right
tray-padding = 0
tray-transparent = true

override-redirect = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[bar/bar2]
monitor = ${env:SECONDARY_DISPLAY:HDMI1}
width = 100%
height = 25
offset-x = 0
offset-y = 5

bottom = true
background = #00000000
foreground = #555555

spacing = 1
